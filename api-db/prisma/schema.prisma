datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Wish {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  name       String
  tags       String[] 
  comment    String 
  picture    Bytes   @db.ByteA
}

model Init {
  id         Int      @id @default(autoincrement())
  date       DateTime @default(now())
}